@model File_Sharing.Models.FriendshipRequest

@{
    ViewData["Title"] = "Send Friendship Request";
    string msg = ViewBag.msg;
}

<h1>Send Friendship Request</h1>

@Html.Partial("_Sidebar")

<div class="side-bar-content">

@if(msg != null){
    <p>@msg</p>
}

<form asp-controller="Friendship" asp-action="SendRequest" method="post">


<label asp-for="ReciverEmail" >Enter user email</label>
<input asp-for="ReciverEmail" type="text"/>

<button>Send Request</button>


</form>
</div>

