@using File_Sharing.Models
@using X.PagedList
@using X.PagedList.Mvc.Bootstrap4.Core
@using X.PagedList.Mvc.Core
@model IPagedList<Request>


@{
            ViewData["Title"] = "My Friendship Requests";
}


<h1>Requests</h1>

@Html.Partial("_Sidebar")
<div class="side-bar-content">
@if (Model.Count() > 0)
{
    

<table>
    <tr>
        <th> Name </th>
        <th> Email </th>
        <th> </th>
    </tr>
    @foreach (Request request in Model)
    {
    <tr> 
        <td>@request.SenderName </td>  
        <td>@request.SenderEmail</td>
        <td> <a asp-controller="Friendship" asp-action="AcceptRequest" asp-route-FriendshipId="@request.FriendshipId" >Approve</a> 
             <td> <a asp-controller="Friendship" asp-action="RejectRequest" asp-route-FriendshipId="@request.FriendshipId" >Reject</a>
        </td>
    </tr>
    


    }

</table>

}   

</div>
       @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), Bootstrap4PagedListRenderOptions.OnlyShowFivePagesAtATime)

       
